<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_FarmerLogin"
        android:layout_width="131dp"
        android:layout_height="51dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="456dp"
        android:backgroundTint="#009688"
        android:text="Farmer"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/textView2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_CustomerLogin"
        android:layout_width="131dp"
        android:layout_height="51dp"
        android:layout_marginTop="456dp"
        android:layout_marginEnd="32dp"
        android:backgroundTint="#009688"
        android:text="Customer"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView2"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:textSize="24sp"
        android:text="PAULTRY"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="277dp"
        android:text="Continue as"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="or"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/btn_CustomerLogin"
        app:layout_constraintEnd_toStartOf="@+id/btn_CustomerLogin"
        app:layout_constraintStart_toEndOf="@+id/btn_FarmerLogin"
        app:layout_constraintTop_toTopOf="@+id/btn_CustomerLogin" />

</androidx.constraintlayout.widget.ConstraintLayout>